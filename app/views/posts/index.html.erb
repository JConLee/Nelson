<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12">
    <% @posts.each do |post| %>
    <div class="col-xs-12 text-center">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div>
        <%= raw(post.body).truncate(358) %>
      </div>
     <div class="text-center">
       <%= link_to "Show", post_path(post), class: "btn btn-primary" %>
      </div>
      <% if admin_signed_in? %>

        <%= link_to "", edit_post_path(post), class: "far fa-edit" %>
        <%= link_to "" ,post_path(post), class: "fas fa-trash-alt", data: {:confirm => "Are you sure?"}, method: :delete %>
      <% end %>
      <hr />
    </div>
    <% end %>
  </div>
</div>

